# k8s alias

alias kube-restart='sudo systemctl restart kubelet.service'
alias kube-status='sudo systemctl status kubelet.service'
alias kube-restart='sudo systemctl restart kubelet.service'

# kube get
alias kube-get='kubectl get'
alias kube-get-sys='kubectl get -n kube-system'
alias kube-get-all='kubectl get --all-namespaces'
alias kube-get-node='kube-get nodes'
alias kube-get-pod='kube-get pod'
alias kube-get-sys-pod='kube-get-sys pod'
alias kube-get-all-pod='kube-get-all pod'
alias kube-get-svc='kube-get svc'
alias kube-get-sys-svc='kube-get-sys svc'
alias kube-get-all-svc='kube-get-all svc'
alias kube-get-deploy='kube-get deploy'
alias kube-get-sys-deploy='kube-get-sys deploy'
alias kube-get-all-deploy='kube-get-all deploy'
alias kube-get-ep='kube-get endpoints'
alias kube-get-sys-ep='kube-get-sys endpoints'
alias kube-get-all-ep='kube-get-all endpoints'

# kube desc
alias kube-desc='kubectl describe'
alias kube-desc-sys='kubectl describe -n kube-system'
alias kube-desc-all='kubectl describe --all-namespaces'
alias kube-desc-pod='kube-desc pod'
alias kube-desc-sys-pod='kube-desc-sys pod'
alias kube-desc-all-pod='kube-desc-all pod'
alias kube-desc-svc='kube-desc svc'
alias kube-desc-sys-svc='kube-desc-sys svc'
alias kube-desc-all-svc='kube-desc-all svc'

# kube CRUD
alias kube-exec='kubectl exec -it'
alias kube-create-file='kubectl create -f'
alias kube-del-file='kubectl delete -f'

