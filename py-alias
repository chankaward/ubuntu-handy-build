# python alias
alias py='python'
alias py2='python2'
alias py3='python3'
alias py3.6='python3.6'

alias pip-local-install='pip install --user'
alias pip3-local-install='pip3 install --user'
alias pip3.6-local-install='pip3.6 install --user'

alias pip-install-aliyun='pip install -i https://mirrors.aliyun.com/pypi/simple/ --user '
alias pip3-install-aliyun='pip3 install -i https://mirrors.aliyun.com/pypi/simple/ --user '
alias pip3.6-install-aliyun='pip3.6 install -i https://mirrors.aliyun.com/pypi/simple/ --user '
alias pip3.6-install-aliyun-global='pip3.6 install -i https://mirrors.aliyun.com/pypi/simple/'


alias pip-upgrade='pip install --ignore-install --upgrade'
alias pip3-upgrade='pip3 install --ignore-install --upgrade'
alias pip3.6-upgrade='pip3.6 install --ignore-install --upgrade'

alias py3-venv='python3.6 -m venv'

# --config-dir --data-dir --runtime-dir --paths
alias jupyter-start='jupyter notebook --port=8888 --ip 0.0.0.0 --no-browser'
alias jupyter-start-root='jupyter notebook --port=8888 --ip 0.0.0.0 --no-browser --allow-root'
